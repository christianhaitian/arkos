<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>0.05 0.0</pos>
        <logoAlignment>left</logoAlignment>         
        <size>1.0 0.934</size>
        <logoScale>1.5</logoScale>
        <zIndex>5</zIndex>          
        <logoSize>0.3 0.2</logoSize>
        <color>00000000</color>
        <maxLogoCount>3</maxLogoCount>       
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/background.png</path>
      </image>  
      <image name="background_bottom" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>4</zIndex>                 
         <path>./_inc/images/background_bottom.png</path>
      </image>                   
      <text name="systemInfo">     
         <pos>0.25 0.01</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ca9d5f</color>
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
	     <fontSize>0.05</fontSize>
         <zIndex>5</zIndex>	     
      </text>            
   </view>
</feature>

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
         <fontSize>0.04275</fontSize>     
         <pos>0.04 0.948</pos>      
         <textColor>101010</textColor>
         <iconColor>101010</iconColor>
      </helpsystem>
   </view>  

   <view name="detailed,video,basic">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
         <fontSize>0.035</fontSize>     
         <pos>0.01 0.948</pos>      
         <textColor>101010</textColor>
         <iconColor>101010</iconColor>
      </helpsystem>
   </view>  

   <view name="basic,detailed,video">
      <textlist name="gamelist">      
         <selectorColor>00000000</selectorColor>
         <selectedColor>ff3a3a</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ca9d5f</secondaryColor>
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
         <fontSize>0.04</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound>./_inc/sounds/Move.wav</scrollSound>
         <zIndex>3</zIndex>                          
      </textlist>
   </view> 
   
   <view name="detailed,video">
      <textlist name="gamelist">                          
         <pos>0.025 0.025</pos>
         <size>0.48 0.9</size>
         <alignment>left</alignment>                       
      </textlist>
   </view>
   
   <view name="basic">
      <textlist name="gamelist">                          
         <pos>0.2 0.19</pos>
         <size>.6 0.74</size>
         <alignment>center</alignment>                       
      </textlist>
   </view>
   
   <view name="basic">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/background_basic.png</path>
         <zIndex>1</zIndex>          
      </image>                
   </view> 
    
   <view name="detailed,video">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/background_video.png</path>
         <zIndex>1</zIndex>         
      </image>                
   </view>     
   
   <view name="detailed">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.75 0.66</pos>
         <maxSize>0.45 0.45</maxSize>
         <zIndex>2</zIndex>         
      </image>      
   </view>

   <view name="video">   
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.748 0.65</pos>
         <maxSize>0.43 0.43</maxSize>
         <delay>1</delay>
         <zIndex>2</zIndex>         
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>
      </video>             
   </view>
   
   <view name="detailed,video">
      <text name="md_lbl_releasedate, md_lbl_players, md_lbl_rating, md_rating, md_players, md_releasedate">
         <fontPath>./_inc/fonts/sans-black-cond-italic.ttf</fontPath>
         <fontSize>0.034</fontSize>
      </text>
      <text name="md_lbl_rating">
         <origin>0.5 0.5</origin>
         <pos>0.95 0.35</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>
      </text>   
      <rating name="md_rating">
         <origin>0.5 0.5</origin>       
         <pos>0.77 0.35</pos>
         <size>0.05 0.05</size>
         <zIndex>2</zIndex>
         <filledPath>./_inc/images/star_full.png</filledPath>
         <unfilledPath>./_inc/images/star_hollow.png</unfilledPath>
      </rating>
      <text name="md_lbl_players">
         <origin>0.5 0.5</origin>
         <pos>0.95 0.27</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex> 
      </text>
      <text name="md_players">
         <origin>0.5 0.5</origin>
         <pos>1.072 0.27</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>
      </text>
      <text name="md_lbl_releasedate">
         <origin>0.5 0.5</origin>
         <pos>0.95 0.31</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>                  
      </text>
      <datetime name="md_releasedate">
         <origin>0.5 0.5</origin>
         <pos>1.072 0.31</pos>
		 <format>%Y</format>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>         
      </datetime>
      <image name="md_marquee">
         <pos>1 1</pos>
         <origin>0.5 0.5</origin>
         <maxSize>0.1 0.1</maxSize>
         <zIndex>1</zIndex>         
      </image>
      
   </view>
    <view name="menu">
    <menuBackground name="menubg">
      <color>ffffff</color>
    </menuBackground>
	<menuText name="menutext, menutitle">
      <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
      <fontSize>.039</fontSize>
      <color>000000</color>
    </menuText>
   </view>
</theme>
